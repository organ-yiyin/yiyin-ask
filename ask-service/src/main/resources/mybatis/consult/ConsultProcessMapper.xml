<!DOCTYPE mapper PUBLIC     
    "-//mybatis.org//DTD Mapper 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="yiyin.consultProcess">
    <select id="getConsultProcessList" resultType="com.yiyn.ask.xcx.consult.po.ConsultProcessPo" parameterType="String">
        SELECT *, DATE_FORMAT(p.CREATED_TIME,'%Y-%m-%d %H:%i:%s') as created_time_format
			FROM `consultation_process` p
       	where p.CONSULTATION_ID = #{value}
    </select>
    
    <insert id="insert" parameterType="com.yiyn.ask.xcx.consult.po.ConsultProcessPo" useGeneratedKeys="true" keyProperty="id">
		insert into consultation_process(CONSULTATION_ID,CONTENT,CONTENT_TYPE,SEND_TYPE,CREATED_BY,CREATED_TIME)
		values(#{consultation_id},#{content},#{content_type},#{send_type},#{created_by},now())
	</insert>
</mapper>